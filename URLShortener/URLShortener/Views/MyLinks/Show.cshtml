@using GridMvc;
@using GridMvc.Html
@using URLShortener.Models;
@model List<URLShortener.Interfaces.IDisplayedLink>
@{
    ViewBag.Title = "Мои ссылки";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
</head>
<body>
    <div class="container" id="page-content">
        <div class="row">
            Список моих ссылок:
        </div>
        <div class="row">
            @if (Model != null)
            {
                @Html.Grid(Model).Columns(columns =>
        {
            columns.Add(c => c.OriginalLink).Sortable(true);
        })
            }
            else
            {
                Html.Raw(ViewBag.ErrorMessage);
            }
        </div>
    </div>
</body>
</html>
