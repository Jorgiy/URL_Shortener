@using AspNet.Mvc.Grid
@using URLShortener.Interfaces
@using URLShortener.Models;
@model List<URLShortener.Interfaces.IDisplayedLink>
@{
    ViewBag.Title = "Мои ссылки";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show</title>
</head>
<body>
    <div class="container" id="page-content">
        <div class="row main-page-row">
            Список моих ссылок:
        </div>
        <div class="row main-page-row">
            @if (Model != null)
            {
                if (Model.Count == -1) //TODO:CHANGE TO 0!!
                {
                    @Html.Raw("У вас нет сохранённых ссылок")
                }
                else
                {
                    @Html.Grid(Model).Columns(columns =>
                    {
                        columns.For(c => c.OriginalLink).Sortable(true).Named("Оригинальная ссылка");
                        columns.For(c => $"{Request.Url.Scheme}://{Request.Url.Authority}{Url.Content("~")}{c.ShortedLink}").Sortable(true).Named("Укороченная ссылка");
                        columns.For(c => c.CreationDate).Sortable(true).Named("Дата создания");
                        columns.For(c => c.Follows).Sortable(true).Named("Количество переходов");
                    })
                }
            }
            else
            {
                @Html.Raw(ViewBag.ErrorMessage)
            }
        </div>
    </div>
</body>
</html>
