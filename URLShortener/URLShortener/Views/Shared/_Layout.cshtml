<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="~/Scripts/jquery-1.10.2.js"></script>
    <script type="text/javascript" src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="https://cdn.jsdelivr.net/clipboard.js/1.5.3/clipboard.min.js"></script>
    <script src="~/Scripts/bootstrap.js"></script>
</head>
<body>
    <header style="background: #ebebff; border: double; border-color: #abebff; margin-bottom: 1%">
        <a href="~/" style="text-decoration: none">
            <h1 style="color: #555; margin-left: 10%">URL Shortener</h1>
        </a>
    </header>
    @RenderBody()
    <footer>
        <nav class="navbar navbar-default" style="background: #ebebff; border: double; border-color: #abebff">
            <div class="container">
                <div class="navbar-header">
                    <h4 class="glyphicon glyphicon-th navbar-brand" style="padding: 0; margin-left: 10%"></h4>
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar-main">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="collapse navbar-collapse" id="navbar-main">
                    <ul class="nav navbar-nav">
                        <li>
                            <a href="~/" style="text-decoration: none">
                                <div class="menu-element">
                                    <div class="glyphicon glyphicon-home"></div>
                                    <div style="display: inline-block">Main page</div>
                                </div>
                            </a>
                        </li>
                        <li>
                            <a href="~/MyLinks/Show" style="text-decoration: none">
                                <div class="menu-element">
                                    <div class="glyphicon glyphicon-star"></div>
                                    <div style="display: inline-block">My links</div>
                                </div>
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </footer>
</body>
</html>
